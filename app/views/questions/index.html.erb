

<% @questions.each do |q| %>
  <div style="padding: 10px">
    <h4>
      <%= link_to q.title, question_path(q.id) %>
    </h4>
    <i>
      <%= q.created_at.strftime("%m/%d/%Y") %>
      &nbsp;&nbsp;&nbsp;
      <% unless q.user_id.nil? %>
        |&nbsp;&nbsp;&nbsp;
        <%= q.user.username %>
      <% end %>
    </i>
    <p><%= q.description %></p>
  </div>
  <hr>
<% end %>

